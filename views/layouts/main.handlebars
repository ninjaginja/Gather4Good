        <li><a id="side-logout" class="logout">Logout</a></li>
      </ul>
    </div>
  </nav>

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <div class="row">

    <!-- Modal Tabs -->
    <div class="col s12">
      <ul class="tabs">
        <!-- Login Tab -->
        <li class="tab col s3"><a class="submit-change-trigger" id="login-anchor-modal" href="#login">Login</a></li>
        <!-- Sign Up Tab -->
        <li id="reg-tab" class="tab col s3"><a class="submit-change-trigger" id="reg-anchor-modal" href="#signup">Sign Up</a></li>
        <!-- Close Icon -->
        <li class="right modal-close"><i class="material-icons valign-center">clear</i></li>
      </ul>
    </div>

    <!-- Login Tab -->
    <div id="login" class="col s12">
      <!-- Section Header -->
      <h4 style="padding-top: 20px;">Enter Your Info</h4>

      <!--  Login Form-->
      <div class="row">
        <form class="col s12">
          <!-- Email -->
          <div class="row">
            <div class="input-field col s12">
              <input id="login-email" type="email" class="validate">
              <label for="login-email">Email</label>
            </div>
          </div>
          <!-- Password -->
          <div class="row">
            <div class="input-field col s12">
              <input id="login-password" type="password" class="validate">
              <label for="login-password">Password</label>
            </div>
          </div>
        </form>
      </div>
    </div>
    </div>

      <!-- Sign Up Tab -->
      <div id="signup" class="col s12" style="margin-left: 11px">
        <!-- Section Header -->
        <h4>Enter Your Info</h4>

        <!-- Sign Up Form -->
        <div class="row">
          <form class="col s12">
            <!-- First Row -->
            <div class="row">
              <!-- First Name -->
              <div class="input-field col s6">
                <input id="first_name" type="text" class="validate">
                <label for="first_name">First Name</label>
              </div>

              <!-- Last Name -->
              <div class="input-field col s6">
                <input id="last_name" type="text" class="validate">
                <label for="last_name">Last Name</label>
              </div>
            </div>
            <!-- Second Row -->
            <div class="row">
              <!-- Email -->
              <div class="input-field col s12">
                <input id="reg-email" type="email" class="validate">
                <label for="reg-email">Email</label>
              </div>
            </div>
            <!-- Third Row -->
            <div class="row">
              <div class="input-field col s12">
                <input id="reg-password" type="password" class="validate">
                <label for="reg-password">Password</label>
              </div>
            </div>
        </form>
      </div>
    </div>

    <!-- Error Display -->
    <div id="main-err-msg"></div>
    <div id="email-format-err-msg"></div>
    <ul id="pw-format-err-msg"> * Invalid password format. Password must contain:
      <li>At least 8 characters</li>
      <li>No spaces</li>
      <li>A lowercase letter (a-z)</li>
      <li>An uppercase letter (A-Z)</li>
      <li>A number (0-9)</li>
    </ul>

    <!-- Submit Button -->
    <button id="submit-btn" class="btn waves-effect waves-light right" type="submit" name="action">Submit</button>
  </div>
</div>
</header>

