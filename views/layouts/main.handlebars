<body>

{{!-- Header HTML--}}
<header>
  <!-- NavBar -->
  <nav>
      <div class="nav-wrapper">
        <!-- Logo Image -->
        <a href="/" class="brand-logo"><img src="/assets/images/gather-box-logo-small.png"></a>

      <!-- Navbar Links -->
